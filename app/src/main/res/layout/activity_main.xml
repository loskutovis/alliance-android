    tools:context="is.loskutov.alliance.activities.MainActivity">

    <ImageView
        style="@style/Logo"
        android:contentDescription="@string/app_name"/>

    <Button
        android:id="@+id/by_categories"
        style="@style/Button.DarkButton"
